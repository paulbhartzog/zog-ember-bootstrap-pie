<div class="container">

  {{zog-jumbo}}

    <div class="card-deck-wrapper">
      <div class="card-deck">

        {{#each model as |card|}}
        <div class="card-wrapper col-lg-4">
          <div class="card">
            <div class="card-header">
              <h5>{{card.title}}</h5>
            </div>
            <div class="card-block">
              <h4 class="card-title">Special title treatment</h4>
              <p class="card-text">
                {{card.body}}
              </p>
              <p class="red">
                red from app.scss
              </p>
              {{#link-to card.link class="btn btn-primary"}}{{card.link}}{{/link-to}}
            </div>
            <div class="card-footer text-muted small">
              {{card.footer}}
            </div>
          </div><!-- end card -->
        </div><!-- end card-wrapper -->

        {{/each}}

      </div><!-- end card deck -->
    </div><!-- end card deck wrapper -->

  </div><!-- end container -->
